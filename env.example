# AWS Configuration (for Amazon Polly Text-to-Speech)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Google Gemini API (for Response Generation)
GEMINI_API_KEY=your-gemini-api-key

# Hugging Face (optional, for token if using private models)
HUGGING_FACE_TOKEN=your-huggingface-token

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/voicebot_db
# OR for MongoDB
MONGO_URI=mongodb://localhost:27017/voicebot_db
DATABASE_TYPE=postgresql  # or mongodb

# Backend API (if using external backend)
BACKEND_API_URL=http://localhost:8000/api

# Application Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=pcm

# Analytics
ANALYTICS_ENABLED=true

